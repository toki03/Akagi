$chi: #00ff80;
$chi-lighten-1: #3f9;
$chi-lighten-2: #66ffb3;
$chi-lighten-3: #9fc;
$chi-darken-1: #0c6;
$chi-darken-2: #00994d;
$chi-darken-3: #063;

Button.Chi {
    background: $chi;
    color: $text;
    border-top: tall $chi-lighten-2;
    border-bottom: tall $chi-darken-3;
    min-width: 10;
}

Button.Chi:hover {
    background: $chi-darken-2;
    color: $text;
    border-top: tall $chi;
}

Button.Chi.-active {
    background: $chi;
    border-bottom: tall $chi-lighten-2;
    border-top: tall $chi-darken-2;
}


